<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="@dimen/fragment_menu_12dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/tv_count"
        app:layout_constraintTop_toBottomOf="@+id/img_back">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/best"
                android:text="Score"
                android:textColor="@color/gray"
                android:textSize="@dimen/fragment_menu_20sp" />

            <TextView
                android:id="@+id/tv_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fragment_menu_10dp"
                android:fontFamily="@font/best"
                android:text="0/50"
                android:textColor="@color/white"
                android:textSize="40sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/fragment_menu_5dp"
                android:fontFamily="@font/best"
                android:text="co bao nhieu con vat?"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="@dimen/fragment_menu_5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_conong" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_a"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_menu_50dp"
                android:layout_marginHorizontal="@dimen/fragment_menu_5dp"
                android:layout_weight="1"
                android:background="@drawable/border_button"
                android:fontFamily="@font/best"
                android:gravity="center"
                android:text=""
                android:textColor="@color/gray_1"
                android:textSize="@dimen/fragment_menu_16sp" />

            <TextView
                android:id="@+id/tv_b"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_menu_50dp"
                android:layout_marginHorizontal="@dimen/fragment_menu_5dp"
                android:layout_weight="1"
                android:background="@drawable/border_button"
                android:fontFamily="@font/best"
                android:gravity="center"
                android:text=""
                android:textColor="@color/gray_1"
                android:textSize="@dimen/fragment_menu_16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_c"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_menu_50dp"
                android:layout_marginHorizontal="@dimen/fragment_menu_5dp"
                android:layout_weight="1"
                android:background="@drawable/border_button"
                android:fontFamily="@font/best"
                android:gravity="center"
                android:text=""
                android:textColor="@color/gray_1"
                android:textSize="@dimen/fragment_menu_16sp" />

            <TextView
                android:id="@+id/tv_d"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_menu_50dp"
                android:layout_marginHorizontal="@dimen/fragment_menu_5dp"
                android:layout_weight="1"
                android:background="@drawable/border_button"
                android:fontFamily="@font/best"
                android:gravity="center"
                android:text=""
                android:textColor="@color/gray_1"
                android:textSize="@dimen/fragment_menu_16sp" />
        </LinearLayout>

        <!--        <ImageView-->
        <!--            android:id="@+id/img_next"-->
        <!--            android:layout_width="100dp"-->
        <!--            android:layout_height="100dp"-->
        <!--            android:src="@drawable/ic_next"-->
        <!--            android:visibility="invisible" />-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_menu_50dp"
            android:layout_marginTop="@dimen/fragment_menu_40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/img_view"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/fragment_menu_5dp"
                android:background="@drawable/bg_click_next"
                android:fontFamily="@font/best"
                android:gravity="center"
                android:padding="@dimen/fragment_menu_5dp"
                android:text="VIEW"
                android:textColor="@color/teal_700"
                android:visibility="visible" />

            <TextView
                android:id="@+id/img_next"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_click_next"
                android:fontFamily="@font/best"
                android:gravity="center"
                android:padding="@dimen/fragment_menu_5dp"
                android:text="NEXT"
                android:textColor="@color/teal_700"
                android:visibility="visible" />

            <TextView
                android:id="@+id/img_home"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/fragment_menu_5dp"
                android:background="@drawable/bg_click_next"
                android:fontFamily="@font/best"
                android:gravity="center"
                android:padding="@dimen/fragment_menu_5dp"
                android:text="HOME"
                android:textColor="@color/teal_700"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fragment_menu_20dp"
        android:fontFamily="@font/best"
        android:gravity="center"
        android:text="1/10"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>